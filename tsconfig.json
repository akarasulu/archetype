{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"],
      "@jsonnet": ["src/jsonnet"],
    },
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "composite": true,
    "lib": ["esnext"]
  },
  "include": [
    "src/**/*"
  ]
}
